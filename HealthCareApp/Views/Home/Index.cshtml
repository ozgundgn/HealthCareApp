@using Repository.Helpers
@using Models.Enums
@using Core.Extentions
@{
    ViewData["Title"] = "Home Page";
}

@if (SessionHelper.DefaultSession.Id != 0)
{
    <div class="row">
        <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6">
            <div class="card mb-3 widget-content bg-night-fade">
                <div class="widget-content-wrapper text-white">
                    <div class="widget-content-left">
                        <div class="widget-heading">@SessionHelper.DefaultSession.FirstName &nbsp; @SessionHelper.DefaultSession.LastName</div>
                        <div class="widget-subheading">@SessionHelper.DefaultSession.IdentityNumber</div>
                    </div>
                    <div class="widget-content-right">

                        <div class="widget-numbers text-white"><span>@(((BloodGroupEnum) SessionHelper.DefaultSession.BloodGroup).GetDescription())</span><span>&nbsp;@(((RhEnum) SessionHelper.DefaultSession.Rh).GetDescription())</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <div class="chartjs-size-monitor" style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
                    <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                <h5 class="card-title">VERİ ANALİZİ</h5>
                <canvas id="chart-area" width="385" height="192" style="display: block; height: 154px; width: 308px;" class="chartjs-render-monitor"></canvas>
            </div>
        </div>
    </div>
</div>